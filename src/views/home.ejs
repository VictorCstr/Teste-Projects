<%- include ('./partials/header') -%>
<nav class="navbar navbar-dark navbar-expand-sm bg-success">
   <a href="/" class="navbar-brand">  Administração de Projetos - Login </a>
</nav>
<div class="container login-container d-flex justify-content-center">
        <div class="col-md-5 login-form-2 d-flex flex-column">
            <h3 class="my-5">Criação de Usuários</h3>
            <form method="post" action="/">
                <div class="form-group">
                    <label>Nome de Usuário:</label>
                      <input type="text" name="username" class="form-control my-2" placeholder="*"/>
                    <label>Senha:</label>
                      <input type="password" name="password" class="form-control my-2" placeholder="*"/>
                      <div class="form-group d-flex flex-column justify-content-center">
                        <input type="submit" class="btnSubmit mt-3 btn btn-outline-success btn-lg" value="Entrar" />
                        <button type="button" class="btnSubmit mt-3 btn btn-outline-primary btn-lg" data-toggle="modal" data-target="#exampleModal">
                          Cadastrar Usuário
                        </button>
                      </div>            
                </div>
            </form>
           
            <div class="modal" tabindex="-1" id="exampleModal">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Página de Cadastro</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <form method="post" action="/user">
                  <div class="modal-body">
                          <div class="form-group">
                              <input type="text" name="name" class="form-control" placeholder="Seu Nome *" value="" />
                          </div>
                          <div class="form-group">
                              <input type="text" name="username" class="form-control" placeholder="Seu Nome de Usuário *" value="" />
                          </div>
                          <div class="form-group">
                              <input type="password" name="password"  class="form-control" placeholder="Sua Senha *" value="" />
                          </div>  
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary " data-dismiss="modal">Fechar Página</button>
                    <button type="submit" class="btn btn-primary">Cadastrar Usuário</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include ('./partials/footer') -%>
